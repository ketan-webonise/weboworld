<div class="span3 offset1">
  <%= form_tag send_mail_invites_path(@emails), :method => :get do%>
      <fieldset>
        <legend>Invites Friends</legend>
        <p>
          Enter Friend's email<br />
          <%= text_field_tag "email" %>
        </p>
        <span class="help-block">eg. pansinghtomar@yopmail.com.</span>
        <p><%= submit_tag 'Invites' %></p>
      </fieldset>
  <% end %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('#email').tokenInput('/invites/search_emails.json', {
            crossDomain: false,
            prePopulate: $("#email").data("pre" )
        });
    });
</script>